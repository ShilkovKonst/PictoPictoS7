{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}

    <style>
        body { height: 100vh; display: flex; justify-content: center; align-items: center; background-color: #1e646f;}
    </style>

    <div class="relative w-[1000px] min-w-[1000px] h-[600px] min-h-[600px] p-6 bg-[#ecf0f3] rounded-xl overflow-hidden">
        <div class="container flex justify-center items-center absolute top-0 w-[600px] h-full p-6 bg-[#ecf0f3] transition ease-in-out duration-1000 z-50 left-[calc(100%-600px)]"
            id="a-container">
            {% include "main/guest_desc.html.twig" with {guest: path('main_index')} %}
            {% include "main/guest_footer.html.twig" with {mentions: path('main_index'), partners: path('main_index'), apropos: path('main_index')}  %}
        </div>
    
        <div class="switch flex justify-center items-center absolute top-0 left-0 h-full w-[400px] p-12 z-50 transition duration-1000 bg-[#ecf0f3] overflow-hidden shadow-[4px_4px_10px_#d1d9e6]" id="connexion switch-cnt">
            <div class="switch__circle absolute w-[500px] h-[500px] rounded-full -bottom-2/3 -left-2/3 transition duration-1000 shadow-[inset_8px_8px_12px_#d1d9e6]"></div>
            <div class="switch__circle switch__circle--t absolute w-[500px] h-[500px] rounded-full -top-1/3 left-2/3 transition duration-1000 shadow-[inset_8px_8px_12px_#d1d9e6]"></div>
            <div class="switch__container" id="switch-c1">
                <img src="{{ asset('img/LogoEcam.png') }}" alt="" width="140px">
                <h2 class="form_title title">Connexion</h2>
                <form method="post">
                    {# {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %} #}
                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté
                            {{ app.user.username }},
                            {# <a href="{{ path('app_logout') }}">Déconnexion</a> #}
                            <a href="">Déconnexion</a>
                        </div>
                    {% endif %}
    
                    <div>
                        <input for="inputEmail" class="form__input " type="email" 
                        {# value="{{ last_username }}"  #}
                        name="email"
                            id="inputEmail" placeholder="Email" required autofocus/>
                    </div>
    
                    <div class="pss">
                        <input for="inputPassword" name="password" id="inputPassword" class="form__input " type="password"
                            placeholder="Mot de Passe" required/>
                    </div>
                    <div>
                        {# <a href="{{ path('app_forgot_password_request') }}" class="form__link">Mot de passe oublié ?</a> #}
                        <a href="" class="form__link">Mot de passe oublié ?</a>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div>
                        <button type="submit" id="logIn" class="switch__button button switch-btn">Se Connecter</button>
                    </div>
                </form><br>
                <p class="switch__description description">Pas encore de compte ?
                    {# <a href="{{ path('register') }}" class="form__link">S'inscrire</a> #}
                    <a href="" class="form__link">S'inscrire</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
