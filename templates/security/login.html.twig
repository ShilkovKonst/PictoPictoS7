{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="sm:h-screen sm:flex sm:justify-center sm:items-center bg-pbg ">
  <div
    class="flex flex-col md:flex-row w-full sm:w-4/5 md:w-3/4 lg:w-2/3 xl:w-1/2 h-full sm:h-5/6 md:h-2/3 bg-[#e5e9ec] sm:rounded-xl overflow-hidden">
    <div
      class="flex justify-center z-10 relative items-center h-full w-full md:w-2/5 bg-[#e5e9ec] overflow-hidden shadow-outset-4/10"
      id="connexion switch-cnt">
      {% include "security/login_form.html.twig" %}
      <div class="switch__circle absolute w-96 h-96 rounded-full -bottom-1/2 -left-1/2 shadow-inset-8/12">
      </div>
      <div class="switch__circle switch__circle--t absolute w-96 h-96 rounded-full -top-1/3 left-3/4 shadow-inset-8/12">
      </div>
    </div>

    <div class="flex justify-center items-center relative w-full md:w-3/5 h-auto p-4 md:p-8 lg:p-12 bg-[#e5e9ec]"
      id="a-container">
      {% include "security/guest_desc.html.twig" with {guest: path('main_index')} %}
      {% include "security/guest_footer.html.twig" with {mentions: path('main_index'), partners: path('main_index'),
      apropos: path('main_index')} %}
    </div>
  </div>
</div>
{% endblock %}