{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="md:h-screen bg-pbg md:pt-10">  
  <div
    class="relative w-full sm:w-5/6 md:w-4/5 lg:w-3/4 xl:w-2/3 h-full md:h-[95%] bg-pform sm:rounded-xl overflow-hidden p-3 ml-auto mr-auto">
    <div class="switch__circle absolute w-96 h-96 rounded-full -bottom-1/3 -left-1/3 shadow-inset-8/12">
    </div>
    <div class="switch__circle switch__circle--t absolute w-96 h-96 rounded-full -top-1/3 left-3/4 shadow-inset-8/12">
    </div>
    <div class="flex justify-between items-center flex-col w-full h-full p-4 md:p-6 lg:p-8">
      <img src="{{ asset('img/LogoEcam.png') }}" alt="LogoEcam.png" width="140px" class="z-10 ">
      <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold leading-loose text-[#181818] sm:mb-2 md:mb-4">Inscription</h1>
      {% for flash_error in app.flashes('verify_email_error') %}
      <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
      {% endfor %}

      {{ form_errors(registrationForm) }}

      {{ form_start(registrationForm, {
      'attr': {
      'class': 'flex flex-col md:gap-3 justify-between items-center w-full h-full'
      }
      }) }}
      <div class="w-full grid grid-cols-1 md:grid-cols-2 sm:gap-2 md:gap-4">
        {{ form_row(registrationForm.firstName, {
        'attr': {
        'class': 'input-text z-10',
        }
        }) }}
        {{ form_row(registrationForm.lastName, {
        'attr': {
        'class': 'input-text z-10',
        }
        }) }}
        {{ form_row(registrationForm.email, {
        'attr': {
        'class': 'input-text z-10',
        }
        }) }}
        {{ form_row(registrationForm.phoneNumber, {
        'attr': {
        'class': 'input-text z-10',
        }
        }) }}
        {{ form_row(registrationForm.job, {
        'attr': {
        'class': 'input-text z-10',
        }
        }) }}
        {{ form_row(registrationForm.codeInstitution, {
        'attr': {
        'class': 'input-text z-10',
        }
        }) }}
        {{ form_row(registrationForm.plainPassword.first, {
        'attr': {
        'class': 'input-text z-10',
        }
        }) }}
        {{ form_row(registrationForm.institution, {
        'attr': {
        'class': 'input-text z-10',
        }
        }) }}
        {{ form_row(registrationForm.plainPassword.second, {
        'attr': {
        'class': 'input-text z-10',
        }
        }) }}
      </div>
      {# <div class="flex items-center h-5 mt-2 mr-auto">
        {{ form_row(registrationForm.agreeTerms) }}
      </div> #}

      <button type="submit" class="btn-b">S'inscrire</button>
      {{ form_end(registrationForm) }}
      <p class="z-10 absolute bottom-3 text-sm mx-auto h-11 leading-loose font-bold">Avez-vous déjà un compte?
        <a href="{{ path('app_login') }}" class="cursor-pointer underline hover:text-pred transition duration-150">Se
          connecter</a>
      </p>
    </div>
  </div>

</div>
{% endblock %}