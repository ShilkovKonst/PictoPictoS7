<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="{{ asset('img/LogoEcam.png') }}" />
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}" />
    {% endblock %}
    {% block javascripts %}
    {% block importmap %}
    {{ importmap("app") }}
    {% endblock %}
    {% endblock %}
</head>

<body>
    <div class="absolute left-0 top-0 right-0">
        {% include "_partials/_flash.html.twig" %}</div>
    {% block body %}
    {% block phrase %} {# Champs Phrase #}
    {% if patient is defined %}
    {{ form_start(formText) }}
    <div id="sentence" class="d-flex align-items-center">
        <div id="sentenceField" class="flex-grow-1 text-center py-1">
            <span id="sentenceText"></span>
        </div>
        {{ form_widget(formText.text) }}
        <button id="test2" type="button" class="btn btn-sm px-3" data-toggle="modal" data-target="#sentenceConf">
            <i class="fas fa-star fa-3x"></i>
        </button>
    </div>
    {# Champs Phrase #} {# Modal de Confirmation de Sauvegarde de Phrase #}
    <div class="modal fade" id="sentenceConf" tabindex="-1" role="dialog" aria-labelledby="sentenceConf"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <h5 class="modal-title text-body">Sauvegarder la phrase ?</h5>
                </div>
                <div class="modal-footer d-flex justify-content-around border-0">
                    <button type="button" class="btn btn-danger rounded-pill" data-dismiss="modal">
                        <i class="bi bi-x"></i>
                    </button>
                    {# Bouton Submit #}
                    {{ form_row(formText.submit)
                    }}<button type="submit" class="btn btn-success rounded-pill">
                        <i class="bi bi-check2"></i>
                    </button>
                    {{ form_end(formText) }}
                </div>
            </div>
        </div>
    </div>
    {# end Modal de Confirmation de Sauvegarde de Phrase #}
    {% else %}
    <div id="sentence" class="flex items-center">
        <div id="sentenceField" class="flex-grow text-center py-1">
            <span id="sentenceText"></span>
        </div>
    </div>
    {% endif %}
    {% endblock %}
    {% endblock %}
</body>

</html>