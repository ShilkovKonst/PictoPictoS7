<div class="text-lg text-center font-bold p-2 border-b">
  Mettre à jour pictogramme 
  <a href="{{ path('therapist_pictograms_get_one', { code }) }}">{{ pictogram.title }}</a>
</div>

{{ form_start(pictogramForm, {
'attr': {
'class': 'flex flex-col md:gap-3 justify-between items-center w-full h-full',
'data-controller': "pictoForm"
}
}) }}
<div class="w-full grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-2">
  {{ form_row(pictogramForm.title, {
  'attr': {
  'class': 'input-text z-10',
  }
  }) }}
  {{ form_row(pictogramForm.illustration, {
  'attr': {
  'class': 'z-10 w-full mt-1 mb-3 pl-6 text-sm tracking-[0.15px] border-none outline-none bg-[#ecf0f3] rounded-lg shadow-inset-2/4 focus:shadow-inset-4/4 transition duration-300 ease-in-out',
  },
  }) }}
  {{ form_row(pictogramForm.category, {
  'attr': {
  'class': 'input-text z-10',
  }
  }) }}
  {{ form_row(pictogramForm.type, {
  'attr': {
  'class': 'input-text z-10',
  }
  }) }}
  <div class="border-b">
    <p class="ms-2 my-1 text-sm font-medium text-gray-900">
      Choisir des tags du pictogramme
    </p>
    <div>
      <p id="tagPlaceholderEmpty" class="ms-2 my-1 text-sm text-gray-900" style="display: block;">
        Il faut choisir un type du pictogramme
      </p>
      <p id="tagPlaceholderInvariable" class="ms-2 my-1 text-sm text-gray-900" style="display: none;">
        Il n'y a rien à choisir
      </p>
      {{ form_row(pictogramForm.verbe, {
      'attr': {
      'class': 'grid grid-cols-[20%_80%] gap-1 text-start p-2 ms-2 text-sm font-medium text-gray-900',
      'style': pictogramForm.type.vars.data == 'verbe' ? 'display: grid;' : 'display: none;'
      }
      }) }}
      {{ form_row(pictogramForm.pronom, {
      'attr': {
      'class': 'grid grid-cols-[20%_80%] gap-1 text-start p-2 border-b ms-2 text-sm font-medium text-gray-900',
      'style': pictogramForm.type.vars.data == 'pronom_ou_determinant' ? 'display: grid;' : 'display: none;'
      }
      }) }}
      {{ form_row(pictogramForm.nom_pronom, {
      'attr': {
      'class': 'grid grid-cols-[20%_80%] gap-1 text-start p-2 ms-2 text-sm font-medium text-gray-900',
      'style': pictogramForm.type.vars.data in ['nom', 'pronom_ou_determinant'] ? 'display: grid;' : 'display: none;'
      }
      }) }}
    </div>
  </div>
  <div id="irregularId" class="flex flex-col justify-start items-center border-b" {{ pictogramForm.type.vars.data in ['verbe', 'nom', 'adjectif'] ? "style='display: block;'" : "style='display: none;'" }}>
    {{ form_row(pictogramForm.irregular, {
    'attr': {
    'class': 'flex items-center justify-center h-4 w-4 ms-3',
    }
    }) }}
    <div id="irregularFields" class="p-2" {{ pictogramForm.irregular.vars.data ? "style='display: block;'" : "style='display: none;'" }}>
      <div id="irregularVerb" {{ pictogramForm.type.vars.data == 'verbe' ? "style='display: block;'" : "style='display: none;'" }}>
        {{ form_row(pictogramForm.participe_passe, {
        'attr': {
        'class': 'input-text z-10 mb-2',
        }
        }) }}
      </div>
      <div id="irregularGenre" {{ pictogramForm.type.vars.data == 'adjectif' ? "style='display: block;'" : "style='display: none;'" }}>
        {{ form_row(pictogramForm.feminin, {
        'attr': {
        'class': 'input-text z-10 mb-2',
        }
        }) }}
      </div>
      <div id="irregularNumber" {{ pictogramForm.type.vars.data in ['nom', 'adjectif'] ? "style='display: block;'" : "style='display: none;'" }}>
        {{ form_row(pictogramForm.pluriel, {
        'attr': {
        'class': 'input-text z-10 mb-2',
        }
        }) }}
      </div>
    </div>
  </div>
  <div id="present_conjugationId" class="border-b" {{ pictogramForm.type.vars.data == 'verbe' ? "style='display: block;'" : "style='display: none;'" }}>
    {{ form_row(pictogramForm.present, {
    }) }}
  </div>
  <div id="futur_conjugationId" class="border-b" {{ pictogramForm.type.vars.data == 'verbe' ? "style='display: block;'" : "style='display: none;'" }}>
    {{ form_row(pictogramForm.futur, {
    }) }}
  </div>
</div>


<button type="submit" class="btn-b">Valider</button>
{{ form_end(pictogramForm) }}