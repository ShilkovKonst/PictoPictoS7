<div
    class="w-full h-[95%] flex flex-col justify-between overflow-auto mt-3 md:mt-0 md:ml-3 p-4 bg-[#ffffff80] shadow-inset-5/5 rounded-xl border border-solid border-t-[#ffffff59] border-l-[#ffffff59] border-r-[#dedfe059] border-b-[#dedfe059]">
    <table class="table w-full">
        <tbody class="flex flex-col gap-2">
            <tr
                class="flex flex-col md:flex-row justify-start items-start md:items-center text-sm sm:text-base p-2 border-b">
                <th class="text-start md:w-1/4">Nom</th>
                <td class="text-start md:w-1/3">{{ app.user.lastName}}</td>
            </tr>
            <tr
                class="flex flex-col md:flex-row justify-start items-start md:items-center text-sm sm:text-base p-2 border-b">
                <th class="text-start md:w-1/4">Prénom</th>
                <td class="text-start md:w-1/3">{{ app.user.firstName}}</td>
            </tr>
            <tr
                class="flex flex-col md:flex-row justify-start items-start md:items-center text-sm sm:text-base p-2 border-b">
                <th class="text-start md:w-1/4">Fonction</th>
                <td class="text-start md:w-1/3">{{ app.user.job }}</td>
            </tr>
            <tr
                class="flex flex-col md:flex-row justify-start items-start md:items-center text-sm sm:text-base p-2 border-b">
                <th class="text-start md:w-1/4">Institution</th>
                <td class="text-center md:text-start md:w-1/3">{{ app.user.institution.title }}</td>
            </tr>
            <tr
                class="flex flex-col md:flex-row justify-start items-start md:items-center text-sm sm:text-base p-2 border-b">
                <th class="text-start md:w-1/4">Email</th>
                <td class="text-center md:text-start md:w-3/5 flex items-center">
                    {{ app.user.email }}
                    <div class="relative group text-center w-auto ml-10">
                        {% if app.user.isVerified %}
                        <svg class="w-6 h-6 text-green-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                            fill="currentColor" viewBox="0 0 20 20">
                            <path
                                d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z" />
                        </svg>
                        {% else %}
                        <svg class="cursor-pointer w-6 h-6 text-red-600" aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                            viewBox="0 0 24 24">
                            <path fill-rule="evenodd"
                                d="M2 12C2 6.477 6.477 2 12 2s10 4.477 10 10-4.477 10-10 10S2 17.523 2 12Zm11-4a1 1 0 1 0-2 0v5a1 1 0 1 0 2 0V8Zm-1 7a1 1 0 1 0 0 2h.01a1 1 0 1 0 0-2H12Z"
                                clip-rule="evenodd" />
                        </svg>
                        <div
                            class="hidden group-hover:block absolute bottom-6 -right-8 w-72 rounded-lg alert-danger p-4">
                            <p class="text-red-800">Votre email n'est pas vérifié.</p>
                            <a class="font-semibold underline decoration-1" href="{{ path('app_verify_email_resend') }}">Renvoyer l'email de
                                vérification</a>
                        </div>
                        {% endif %}
                    </div>
                </td>

            </tr>
        </tbody>
    </table>
    <div class="flex flex-row items-center justify-center gap-3">
        <a {# href="{{ path('admin_edit') }}" #} href="{{ path('therapist_test') }}"
            class="btn-a flex flex-row justify-center items-center text-xs sm:text-sm">
            <svg class="w-4 h-4 md:w-6 md:h-6 text-[#f9f9f9]" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M21 13v-2a1 1 0 0 0-1-1h-.757l-.707-1.707.535-.536a1 1 0 0 0 0-1.414l-1.414-1.414a1 1 0 0 0-1.414 0l-.536.535L14 4.757V4a1 1 0 0 0-1-1h-2a1 1 0 0 0-1 1v.757l-1.707.707-.536-.535a1 1 0 0 0-1.414 0L4.929 6.343a1 1 0 0 0 0 1.414l.536.536L4.757 10H4a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1h.757l.707 1.707-.535.536a1 1 0 0 0 0 1.414l1.414 1.414a1 1 0 0 0 1.414 0l.536-.535 1.707.707V20a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1v-.757l1.707-.708.536.536a1 1 0 0 0 1.414 0l1.414-1.414a1 1 0 0 0 0-1.414l-.535-.536.707-1.707H20a1 1 0 0 0 1-1Z" />
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
            </svg>
            mon profil
        </a>
        <a {# href="{{ path('delete_user_form') }}" #} href=""
            class="btn-a flex flex-row justify-center items-center text-xs sm:text-sm ">
            <svg class="w-4 h-4 md:w-6 md:h-6 text-[#f9f9f9]" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z" />
            </svg>
            mon profil
        </a>
    </div>
</div>