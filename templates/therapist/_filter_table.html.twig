<form class="flex flex-wrap flex-col md:flex-row w-1/4"
    action="{{ path('therapist_pictograms_get_all') }}" method="get">
    <input type="hidden" name="sortBy" value="{{ sortBy }}" id="">
    <input type="hidden" name="sortDir" value="{{ sortDir }}" id="">
    <input type="hidden" name="page" value="{{ 1 }}" id="">
    <input type="hidden" name="filter" value="{{ filter }}" id="">

    <select class="font-normal bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full"
        name="value" id="{{ entity }} ">
        <option class="font-semibold" value="">
            {{ app.request.query.get('filter') != filter or app.request.query.get('value') == '' ? entity : 'RÃ©initialiser' }}
        </option>
        {% for item in array %}
        {% if item.title == app.request.query.get('value') %}
        <option value="{{ item.title }}" selected>
            {{ item.title }}
        </option>
        {% else %}
        <option value="{{ item.title }}">
            {{ item.title }}
        </option>
        {% endif %}
        {% endfor %}
    </select>
    <button type="submit" class="btn-a-table h-5 w-full">
        <svg class="w-6 h-6 text-white " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
            fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd"
                d="M10.271 5.575C8.967 4.501 7 5.43 7 7.12v9.762c0 1.69 1.967 2.618 3.271 1.544l5.927-4.881a2 2 0 0 0 0-3.088l-5.927-4.88Z"
                clip-rule="evenodd" />
        </svg>
    </button>
</form>